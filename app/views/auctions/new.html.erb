<paper-material elevation="1" class="maincontent">
  <h2>Start an Auction</h2>

  <%= form_for(@auction, url: auctions_path(), html: {id: "form", method: :post}) do |f| %>
    <paper-input-container always-float-label>
      <label>Auction name</label>
      <%= f.text_field :name, autofocus: true %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Host</label>
      <%= f.text_field :host, autofocus: true %>
    </paper-input-container>

    <paper-input-container always-float-label textarea>
      <label>Description</label>
      <%= f.text_field :description, autofocus: true %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Start Date</label>
      <%= f.date_select :start_time %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Start Time</label>
      <%= f.time_select :start_time %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>End Date</label>
      <%= f.date_select :end_time %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>End Time</label>
      <%= f.time_select :end_time %>
    </paper-input-container>

    <paper-button id="submit">Create Auction</paper-button>
  <% end %>
</paper-material>
